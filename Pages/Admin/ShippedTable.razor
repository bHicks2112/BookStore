<table class="table table-sm table-striped table-bordered">
    <thead>
        <tr>
            <th colspan="5" class="text-center">@TableTitle</th>
        </tr>
    </thead>

    <tbody>
        @if (CheckOuts?.Count() > 0)
            {
                @foreach (CheckOut co in CheckOuts)
                {
                    <tr>
                        <td>@co.Name</td>
                        <td>@co.Zip</td>
                        <th>Book</th>
                        <th>Quantity</th>

                        <td>
                            <button class="btn btn-sm btn-danger" @onclick="@(x => PurchaseSelected.InvokeAsync(co.CheckOutId))">
                                @ButtonLabel
                            </button>
                        </td>
                    </tr>

                    @foreach (CartLineItem cli in co.Lines)
                    {
                        <tr>
                            <td colspan="2"></td>
                            <td>@cli.Books.Title</td>
                            <td>@cli.Quantity</td>
                        </tr>
                    }
                }
            }
            else
            {
                <tr>
                    <td colspan="5" class="text-center">No Orders</td>
                </tr>
            }
    </tbody>
</table>
@code {

    [Parameter]
    public string TableTitle { get; set; } = "Purchases";

    [Parameter]
    public IEnumerable<CheckOut> CheckOuts { get; set; }

    [Parameter]
    public string ButtonLabel { get; set; } = "Shipped";

    [Parameter]
    public EventCallback<int> PurchaseSelected { get; set; }

}
