@page "/admin/books/details/{id:long}"

<h3 class="bg-info text-white text-center p-1">Details</h3>

<table class="table table-sm table-bordered table-striped">

    <tbody>
        <tr><th>Book ID:</th><th>@book.BookId</th></tr>
        <tr><th>Title</th><th>@book.Title</th></tr>
        <tr><th>Category</th><th>@book.Category</th></tr>
        <tr><th>Classification</th><th>@book.Classification</th></tr>
        <tr><th>Author</th><th>@book.Author</th></tr>
        <tr><th>Publisher</th><th>@book.Publisher</th></tr>
        <tr><th>Isbn</th><th>@book.Isbn</th></tr>
        <tr><th>Page Count</th><th>@book.PageCount</th></tr>
        <tr><th>Price</th><th>@book.Price</th></tr>
    </tbody>
</table>

<NavLink class="btn btn-warning" href="@EditUrl">Edit</NavLink>
<NavLink class="btn btn-secondary" href="/admin/books">Back</NavLink>

@code {

    [Inject]
    public iBookStoreRepository repo { get; set; }


    [Parameter]
    public long Id { get; set; }

    public Books book { get; set; }

    protected override void OnParametersSet()
    {
        book = repo.Books.FirstOrDefault(x => x.BookId == Id);
    }

    public string EditUrl => $"/admin/books/edit/{book.BookId}";

}
